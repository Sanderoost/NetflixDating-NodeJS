html
	body
		include header.pug
		script(src="https://code.jquery.com/jquery-1.12.4.js")
		script(src="https://code.jquery.com/ui/1.12.1/jquery-ui.js")
		section
			-
			if user 
				h2 Jouw favorieten
			else
				h2 Dit zijn de keuzes van Sander
			ul
				- for (var x = 0; x < data.length; x++)
						li(data-id=data[x]._id)
							img.image(src=data[x].poster)
							span= x+1
							p= data[x].title
							if user
								button(data-id=data[x]._id, class="delete")
									i(class="fas fa-trash-alt")
			if user
				button(id="enable") Voeg een serie/film toe +
				form(action="/", method="post", class="hide addform")
					input(id='film',type='text',name='film', required)
					button(type="submit", class='add') +
	footer
		include footer.pug